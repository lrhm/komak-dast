<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.iut.komakdast"
    android:versionCode="8"
    android:versionName="1.0.7">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ir.iut.komakdast.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/fullScreenTheme"
        android:usesCleartextTraffic="true"
        >
        <receiver
            android:name="ir.iut.komakdast.Synchronization.Synchronize"
            android:label="NetChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="ir.iut.komakdast.View.Activity.MainActivity"
            android:label="Aftabe"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"

            >

        </activity>

        <activity
            android:name="ir.iut.komakdast.View.Activity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ir.iut.komakdast.View.Activity.IntroActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="ir.iut.komakdast.View.Activity.CreditsActivity"
            android:screenOrientation="portrait">

        </activity>


        <receiver android:name="ir.iut.komakdast.Service.ActionEventReceiver" />




    </application>

</manifest>
