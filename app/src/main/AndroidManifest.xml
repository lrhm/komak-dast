<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.lrhm.komakdast"
    android:versionCode="9"
    android:versionName="1.0.8">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="xyz.lrhm.komakdast.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/fullScreenTheme"
        >


        <activity
            android:name="xyz.lrhm.komakdast.View.Activity.MainActivity"
            android:label="App"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"

            >

        </activity>

        <activity
            android:name="xyz.lrhm.komakdast.View.Activity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="xyz.lrhm.komakdast.View.Activity.IntroActivity"
            android:screenOrientation="portrait">

        </activity>



    </application>

</manifest>
